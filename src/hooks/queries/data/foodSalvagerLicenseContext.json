{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "/okeydoke/foodsalvagerlicense",
    "type": "object",
    "required": [
        "@context",
        "issuer",
        "issuanceDate",
        "type",
        "credentialSubject"
    ],
    "properties": {
        "@context": {
            "$ref": "#/definitions/context"
        },
        "type": {
            "type": "array",
            "items": {
                "anyOf": [
                    {
                        "$ref": "#/definitions/VerifiableCredential"
                    },
                    {
                        "$ref": "#/definitions/FoodSalvagerLicense"
                    }
                ]
            }
        },
        "credentialSubject": {
            "$ref": "#/definitions/credentialSubject"
        },
        "id": {
            "type": "string",
            "format": "uri"
        },
        "issuer": {
            "$ref": "#/definitions/uriOrId"
        },
        "issuanceDate": {
            "type": "string",
            "format": "date-time"
        },
        "expirationDate": {
            "type": "string",
            "format": "date-time"
        },
        "credentialStatus": {
            "$ref": "#/definitions/credentialStatus"
        },
        "credentialSchema": {
            "$ref": "#/definitions/credentialSchema"
        }
    },
    "definitions": {
        "context": {
            "type": "array",
            "items": [
                {
                    "const": "https://www.w3.org/2018/credentials/v1"
                }
            ],
            "additionalItems": {
                "oneOf": [
                    {
                        "type": "string",
                        "format": "uri"
                    },
                    {
                        "type": "object"
                    },
                    {
                        "type": "array",
                        "items": {
                            "$ref": "#/definitions/context"
                        }
                    }
                ]
            },
            "minItems": 1,
            "uniqueItems": true
        },
        "credentialSubject": {
            "type": "object",
            "required": [
                "id"
            ],
            "additionalProperties": false,
            "properties": {
                "id": {
                    "type": "string",
                    "format": "uri"
                },
                "address": {
                    "type": "string",
                    "order": 3,
                    "section": "Address",
                    "description": "Line 1 of farmer address",
                    "title": "Address"
                },
                "state": {
                    "type": "string",
                    "order": 4,
                    "section": "Address",
                    "description": "State of farmer address",
                    "title": "State"
                },
                "city": {
                    "type": "string",
                    "order": 5,
                    "section": "Address",
                    "description": "City of farmer address",
                    "title": "City"
                },
                "certificationGrade": {
                    "type": "string",
                    "order": 2,
                    "section": "Data",
                    "description": "Grade of produce farmer sells",
                    "title": "Grade"
                },
                "idNumber": {
                    "type": "string",
                    "order": 6,
                    "section": "Misc",
                    "description": "ID Number of Farmer",
                    "title": "ID Number"
                },
                "name": {
                    "type": "string",
                    "order": 0,
                    "section": "Data",
                    "description": "Full name of audited farmer",
                    "title": "Full Name"
                },
                "produceType": {
                    "type": "string",
                    "order": 1,
                    "section": "Data",
                    "description": "Type of produce farmer has been verified to sell",
                    "title": "Produce Type"
                },
                "businessLogo": {
                    "type": "string",
                    "format": "uri",
                    "order": 7,
                    "section": "Misc",
                    "description": "Logo of farmer business",
                    "title": "Business Logo"
                }
            }
        },
        "VerifiableCredential": {
            "const": "VerifiableCredential"
        },
        "credentialSchema": {
            "oneOf": [
                {
                    "$ref": "#/definitions/idAndType"
                },
                {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/idAndType"
                    },
                    "minItems": 1,
                    "uniqueItems": true
                }
            ]
        },
        "credentialStatus": {
            "oneOf": [
                {
                    "$ref": "#/definitions/idAndType"
                },
                {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/idAndType"
                    },
                    "minItems": 1,
                    "uniqueItems": true
                }
            ]
        },
        "idAndType": {
            "type": "object",
            "required": [
                "id",
                "type"
            ],
            "properties": {
                "id": {
                    "type": "string",
                    "format": "uri"
                },
                "type": {
                    "type": "string"
                }
            }
        },
        "uriOrId": {
            "oneOf": [
                {
                    "type": "string",
                    "format": "uri"
                },
                {
                    "type": "object",
                    "required": [
                        "id"
                    ],
                    "properties": {
                        "id": {
                            "type": "string",
                            "format": "uri"
                        }
                    }
                }
            ]
        },
        "FoodSalvagerLicense": {
            "const": "FoodSalvagerLicense"
        }
    },
    "title": "Verified Farmer",
    "description": "Verifies that this farmer has been audited by Auditors R'Us to transact within the OkeyDoke ecosystem",
    "trinsic": {
        "appleWallet": {
            "backgroundColor": "",
            "foregroundColor": "",
            "labelColor": "",
            "primaryField": "name",
            "secondaryFields": [
                "produceType",
                "certificationGrade"
            ],
            "auxiliaryFields": []
        }
    }
}